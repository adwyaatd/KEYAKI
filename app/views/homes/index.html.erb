<div class="container-fluid mb-5">
  <div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-7">
      <div class="border rounded">
          <% @posts.each do |post| %>
            <div class="border rounded">
              <div class="image-75">
                <% if post.image.attached? %>
                  <%= image_tag post.image %>
                <% end %>
              </div>
                <h3><%=link_to post.theme,post_path(post) %></h3>
                <p><%= post.text%></p>
                <%= post.created_at%>
                <%# if post.user_id == @current_user.id%>
                  <%#= link_to "削除",post_path(post),method: :delete%>
                <%# end %>
            </div>
          <% end %>
      </div>
    </div>
    <div class="col-md-4 border rounded">
      <%= render partial:'layouts/menu' %>
      <!--<p>jQuery稼働テスト</p>
      <h1>Ajax#index</h1>
      <p id="hoge"></p>-->
    </div>
    <script>
      
    </script>
  </div>
</div>